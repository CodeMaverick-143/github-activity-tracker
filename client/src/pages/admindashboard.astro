---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";


const username = "octocat"; 
const res = await fetch(`http://localhost:8000/api/github/issues?user=${username}`);
type Contribution = {
  title: string;
  repo: string;
  state: string;
  merged: boolean;
};
const contributions: Contribution[] = await res.json();
---

<Layout title="Admin Dashboard - Hacktoberfest 2025">
  <Fragment slot="navbar">
    <Navbar />
  </Fragment>

  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4 font-mono">Admin Dashboard</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto font-mono">
          Manage Hacktoberfest 2025 projects and monitor contributions
        </p>
      </div>

      <div class="bg-white rounded-lg shadow-lg p-8 mt-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 font-mono">Contribution Overview</h2>

         
        <div class="overflow-x-auto">
          <table class="min-w-full table-auto border border-gray-200 rounded-lg">
            <thead class="bg-gray-100">
              <tr>
                <th class="px-4 py-2 text-left text-gray-700 font-mono">PR/Issue</th>
                <th class="px-4 py-2 text-left text-gray-700 font-mono">Repository</th>
                <th class="px-4 py-2 text-left text-gray-700 font-mono">State</th>
                <th class="px-4 py-2 text-left text-gray-700 font-mono">Merged</th>
              </tr>
            </thead>
            <tbody>
              {contributions.map((item: Contribution) => (
                <tr class="border-t">
                  <td class="px-4 py-2 font-mono">{item.title}</td>
                  <td class="px-4 py-2 font-mono">{item.repo}</td>
                  <td class="px-4 py-2 font-mono">{item.state}</td>
                  <td class="px-4 py-2 font-mono">
                    {item.merged ? (
                      <span class="text-green-600 font-bold">Yes</span>
                    ) : (
                      <span class="text-red-600 font-bold">No</span>
                    )}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <Fragment slot="footer">
    <Footer />
  </Fragment>
</Layout> 



